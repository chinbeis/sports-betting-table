generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bet {
  id          String   @id @default(uuid())
  date        DateTime @db.Date
  match       String
  map         String
  bet_type    String
  odds        Float
  stake       Int
  confidence  String
  result      Result   @default(pending)
  profit_loss Int
  notes       String?
  created_at  DateTime @default(now())
}

enum Result {
  win
  loss
  pending
}
